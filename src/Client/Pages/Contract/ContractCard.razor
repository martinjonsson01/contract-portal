@using Domain.Contracts
@inject IJSRuntime _js

<button class="card" style="max-width: 30%;" data-bs-toggle="modal" data-bs-target="#@("id_" + Contract?.Id)">
    <img id="contract-thumbnail" src="@Contract?.ImagePath" class="img-thumbnail img-fluid"/>
    <h3 id="contract-name">@Contract?.Name</h3>
</button>

<ContractDetails Contract="@Contract"/>

@code {
    /// <summary>
    /// The contract to render.
    /// </summary>
    [Parameter, EditorRequired,]
    public Contract? Contract { get; set; }
}

@using Blazorise.Extensions
@using Domain.Users
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Boilerplate App</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="contracts">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Contracts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Admin page
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AboutUs">
                <span class="oi oi-list-rich" aria-hidden="true"></span> About Us
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#log-in">
                Logga in
            </button>
        </div>
    </nav>
</div>


@code {

    [CascadingParameter]
    private string? LoggedInUser { get; set; }

    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}
